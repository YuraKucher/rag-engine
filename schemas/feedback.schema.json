{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UserFeedback",
  "type": "object",
  "required": [
    "feedback_id",
    "question",
    "answer",
    "rating",
    "created_at"
  ],
  "properties": {
    "feedback_id": {
      "type": "string"
    },
    "question": {
      "type": "string"
    },
    "answer": {
      "type": "string"
    },
    "rating": {
      "type": "integer",
      "description": "Оцінка користувача",
      "minimum": -1,
      "maximum": 1
    },
    "comment": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
