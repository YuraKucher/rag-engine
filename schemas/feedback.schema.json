{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UserFeedback",
  "type": "object",
  "required": [
    "feedback_id",
    "evaluation_id",
    "rating",
    "created_at"
  ],
  "properties": {
    "feedback_id": {
      "type": "string",
      "description": "Унікальний ідентифікатор фідбеку"
    },
    "evaluation_id": {
      "type": "string",
      "description": "ID evaluation, до якого відноситься фідбек"
    },
    "rating": {
      "type": "integer",
      "description": "Оцінка користувача",
      "minimum": -1,
      "maximum": 1
    },
    "comment": {
      "type": "string",
      "description": "Додатковий коментар користувача"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Час створення фідбеку"
    }
  },
  "additionalProperties": false
}
