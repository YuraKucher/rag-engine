{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evaluation",
  "type": "object",
  "required": [
    "evaluation_id",
    "question",
    "answer",
    "created_at"
  ],
  "properties": {
    "evaluation_id": {
      "type": "string",
      "description": "Unique evaluation identifier"
    },
    "question": {
      "type": "string"
    },
    "answer": {
      "type": "string"
    },

    "indexes": {
      "type": "array",
      "description": "Per-index evaluation signals",
      "items": {
        "type": "object",
        "required": ["index_id"],
        "properties": {
          "index_id": {
            "type": "string"
          },
          "used_chunks": {
            "type": "array",
            "items": { "type": "string" }
          },
          "avg_relevance": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "avg_groundedness": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        },
        "additionalProperties": true
      }
    },

    "documents": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "document_id": { "type": "string" },
          "relevance": { "type": "number" },
          "answerability": { "type": "number" }
        },
        "additionalProperties": true
      }
    },

    "chunks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "chunk_id": { "type": "string" },
          "relevance": { "type": "number" },
          "groundedness": { "type": "number" }
        },
        "additionalProperties": true
      }
    },

    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": true
}
