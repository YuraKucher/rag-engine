{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EvaluationResult",
  "type": "object",
  "required": [
    "evaluation_id",
    "question",
    "answer",
    "index_id",
    "chunk_ids",
    "metrics",
    "created_at"
  ],
  "properties": {
    "evaluation_id": {
      "type": "string",
      "description": "Унікальний ідентифікатор оцінки"
    },
    "question": {
      "type": "string",
      "description": "Користувацьке питання"
    },
    "answer": {
      "type": "string",
      "description": "Згенерована відповідь"
    },
    "index_id": {
      "type": "string",
      "description": "ID індексу, використаного для retrieval"
    },
    "chunk_ids": {
      "type": "array",
      "items": { "type": "string" },
      "description": "ID чанків, що були використані для відповіді"
    },
    "metrics": {
      "type": "object",
      "required": ["relevance", "groundedness"],
      "properties": {
        "relevance": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "groundedness": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "answerability": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "additionalProperties": false
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Час проведення оцінки"
    }
  },
  "additionalProperties": false
}
