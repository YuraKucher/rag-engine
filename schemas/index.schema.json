{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Index",
  "type": "object",
  "required": [
    "index_id",
    "index_type",
    "embedding_model",
    "chunk_ids",
    "created_at"
  ],
  "properties": {
    "index_id": {
      "type": "string",
      "description": "Унікальний ідентифікатор індексу"
    },
    "index_type": {
      "type": "string",
      "description": "Тип індексу (faiss, інш.)"
    },
    "embedding_model": {
      "type": "string",
      "description": "Назва embedding-моделі"
    },
    "chunk_ids": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Список ID чанків в індексі"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
