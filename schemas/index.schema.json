{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Index",
  "type": "object",
  "required": [
    "index_id",
    "index_type",
    "embedding_model",
    "index_path",
    "chunk_ids",
    "document_ids",
    "created_at"
  ],
  "properties": {
    "index_id": {
      "type": "string",
      "description": "Унікальний ідентифікатор індексу"
    },
    "index_type": {
      "type": "string",
      "description": "Тип індексу (faiss, інший)"
    },
    "embedding_model": {
      "type": "string",
      "description": "Назва embedding-моделі"
    },
    "index_path": {
      "type": "string",
      "description": "Фізичний шлях до файлу індексу (FAISS)"
    },
    "chunk_ids": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Список ID чанків, що входять до індексу"
    },
    "document_ids": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Список ID документів, представлених в індексі"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Час створення індексу"
    }
  },
  "additionalProperties": false
}
