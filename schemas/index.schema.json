{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Index",
  "type": "object",
  "required": [
    "index_id",
    "embedding_model",
    "index_path",
    "created_at"
  ],
  "properties": {
    "index_id": {
      "type": "string",
      "description": "Unique index identifier"
    },
    "embedding_model": {
      "type": "string",
      "description": "Embedding model used to build the index"
    },
    "index_path": {
      "type": "string",
      "description": "Filesystem path to the index"
    },

    "index_role": {
      "type": "string",
      "enum": ["general", "definition", "procedure", "qa", "custom"],
      "description": "Semantic role of the index"
    },
    "index_scope": {
      "type": "string",
      "enum": ["global", "document", "collection"],
      "description": "Scope of indexed content"
    },
    "created_from": {
      "type": "string",
      "description": "Pipeline or reason that created the index"
    },

    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": true
}
