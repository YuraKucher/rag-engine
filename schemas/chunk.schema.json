{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Chunk",
  "type": "object",
  "required": [
    "chunk_id",
    "document_id",
    "content"
  ],
  "properties": {
    "chunk_id": {
      "type": "string",
      "description": "Unique chunk identifier"
    },
    "document_id": {
      "type": "string",
      "description": "Parent document identifier"
    },
    "content": {
      "type": "string",
      "description": "Chunk text content"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "index_id": {
          "type": "string",
          "description": "Primary index id (backward compatible)"
        },
        "index_ids": {
          "type": "array",
          "items": { "type": "string" },
          "description": "All indexes this chunk belongs to"
        },
        "position": {
          "type": "integer",
          "minimum": 0
        },
        "source": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
